<?xml version="1.0" encoding="UTF-8"?>
<web-app 
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
    <servlet>
        <servlet-name>CreationClient</servlet-name>
        <servlet-class>servlets.CreationClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreationClient</servlet-name>
        <url-pattern>/creation-client</url-pattern>
    </servlet-mapping>    
    <servlet>
        <servlet-name>CreationCommande</servlet-name>
        <servlet-class>servlets.CreationCommande</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreationCommande</servlet-name>
        <url-pattern>/creation-commande</url-pattern>
    </servlet-mapping> 
    
    <servlet>
        <servlet-name>AffichageClient</servlet-name>
        <servlet-class>servlets.AfficherClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AffichageClient</servlet-name>
        <url-pattern>/afficher-client</url-pattern>
    </servlet-mapping>     
    <servlet>
        <servlet-name>AfficherCommande</servlet-name>
        <servlet-class>servlets.AfficherCommande</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AfficherCommande</servlet-name>
        <url-pattern>/afficher-commande</url-pattern>
    </servlet-mapping>
</web-app>